<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class="message error"><%= errorMessage %></div>
        <% } %>
        <form class="auth-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" value="<%= oldInput.email %>" id="email">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                    type="password" name="password" value="<%= oldInput.password %>" id="password">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="password" 
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                name="confirmPassword" value="<%= oldInput.confirmPassword %>" id="confirmPassword">
            </div>
            <button class="btn" type="submit">Create Account</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>